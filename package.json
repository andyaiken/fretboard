{
	"name": "fretboard",
	"version": "1.0.0",
	"homepage": "https://andyaiken.github.io/fretboard/",
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/node": "^18.14.0",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"eslint": "^8.34.0",
		"gh-pages": "^5.0.0",
		"react-scripts": "5.0.1",
		"sass": "^1.58.3",
		"typescript": "^4.9.5"
	},
	"scripts": {
		"depend": "npx npm-check-updates --interactive --format group",
		"start": "react-scripts start",
		"eject": "react-scripts eject",
		"predeploy": "react-scripts build",
		"deploy": "gh-pages -d build"
	},
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"plugin:@typescript-eslint/strict",
			"react-app"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "./tsconfig.json"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"root": true
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
